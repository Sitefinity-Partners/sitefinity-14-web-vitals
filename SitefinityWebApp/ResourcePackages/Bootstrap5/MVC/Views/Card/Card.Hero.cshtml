@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<div class="container col-xxl-8 px-4 py-5 @Model.CssClass">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="@Model.SelectedSizeUrl" class="d-block mx-lg-auto img-fluid" alt="@Model.ImageAlternativeText" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">@Html.HtmlSanitize(Model.Heading)</h1>
            <div class="lead">@Html.HtmlSanitize(Model.Description)</div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                @if (!string.IsNullOrEmpty(Model.ActionName))
                {
                    <a class="btn btn-primary btn-lg px-4 me-md-2" href="@Html.UrlSanitize(Model.ActionUrl)" role="button">@Model.ActionName</a>
                }
            </div>
        </div>
    </div>
</div>
