@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
<div class="@Model.CssClass container">
    <div class="jumbotron bg-cover text-white" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0.6) 100%), url(&quot; @Model.SelectedSizeUrl &quot; );">
        <h1 class="display-4">@Html.HtmlSanitize(Model.Heading)</h1>
        <p class="lead">@Html.HtmlSanitize(Model.Description)</p>
        @if (!string.IsNullOrEmpty(Model.ActionName))
        {
            <a class="btn btn-primary btn-lg" href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-primary btn-lg" role="button" >@Model.ActionName</a>
        }
    </div>
</div>
